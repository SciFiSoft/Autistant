<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rec_new_col1"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <Button
                android:id="@+id/btn_Cardiologists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Cardiologists"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_Dermatologists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Dermatologists"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_Nephrologists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Nephrologists"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_Neurologists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Neurologists"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_Medicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Medicine"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_Orthopedics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Orthopedics"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_Urologists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Urologists"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_Dentists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Dentists"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_ENT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="ENT"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_Vision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Vision"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_Pedi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Pedi Neurologists"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_Dietitian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rec_new_col2"
                android:padding="20dp"
                android:text="Dietitian"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>